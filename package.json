{
  "name": "xml-sax-ts",
  "version": "0.1.0",
  "description": "One-pass, streaming (SAX-style) XML parser for TypeScript (Node.js & browsers)",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . && tsc -p tsconfig.json --noEmit",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "tsup": "^8.0.0",
    "typescript-eslint": "^8.54.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  }
}
